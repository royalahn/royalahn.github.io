{
  "title": "Hugh GitBook",
  "styles": {
    "website": "assets/css/website.css"
  },
  "plugins": [
    "splitter",
    "expandable-chapters-small",
    "toggle-chapters",
    "page-toc",
    "copy-code-button",
    "-sharing",
    "-highlight",
    "prism",
    "prism-themes"
  ],
  "pluginsConfig": {
    "fontsettings": {
      "theme": "white",
      "family": "sans",
      "size": 1
    },
    "prism": {
      "css": [
        "prism-themes/themes/prism-dracula.css"
      ]
    },
    "page-toc": {
      "selector": ".markdown-section h1, .markdown-section h2, .markdown-section h3"
    }
  }
}
