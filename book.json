{
  "title": "Hugh GitBook",

  "styles": {
    "website": "assets/css/website.css"
  },

  "plugins": [
    "splitter",
    "chapter-fold",
    "intopic-toc",
    "code",
    "-sharing",
    "-highlight",
    "prism",
    "prism-themes",
    "flexible-alerts",
    "custom-favicon",
    "back-to-top-button",
    "logo",
    "-lunr",
    "-search",
    "search-pro"
  ],

  "pluginsConfig": {
    "fontsettings": {
      "theme": "white",
      "family": "sans",
      "size": 1
    },

    "prism": {
      "css": ["prism-themes/themes/prism-dracula.css"]
    },

    "intopic-toc": {
      "label": "Contents"
    },

    "favicon": "assets/images/book.png",

    "insert-logo": {
      "url": "",
      "style": "background: none; max-height: 40px;"
    },

    "logo": {
      "logo": "/assets/images/logo.png",
      "logoStyle": "height: 40px;",
      "url": "https://royalahn.github.io"
    }
  }
}
